{
    "name": "deloitte-tax-chat",
    "version": "1.0.0",
    "description": "Deloitte Auditor Enterprise Chat UI for Tax Consultation",
    "main": "index.js",
    "scripts": {
        "start": "node server/server.js",
        "server": "nodemon server/server.js",
        "client": "npm start --prefix client",
        "dev": "concurrently \"npm run server\" \"npm run client\"",
        "install-all": "npm install && npm install --prefix client && npm install --prefix server",
        "build": "npm run build --prefix client"
    },
    "keywords": [
        "deloitte",
        "tax",
        "chat",
        "openai",
        "react",
        "express"
    ],
    "author": "Deloitte IT Team",
    "license": "UNLICENSED",
    "devDependencies": {
        "concurrently": "^8.2.2",
        "nodemon": "^3.0.1"
    }
}